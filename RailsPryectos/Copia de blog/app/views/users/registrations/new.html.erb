<div class="row">
  <div class="col-md-12">
    <div class="jumbotron ">
      <h2 class="text-center   form-title">Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group row">
    <%= f.label :email, class:"offset-md-1 col-md-2 col-form-label text-right space-label-right" %>
    <%= f.email_field :email, autofocus: true, class:"col-md-6 form-control" %>
  </div>

  <div class="form-group row">
    <div class="col-md-12">
      <% if @minimum_password_length %>
        <p class="text-center" style="margin-top: 0px;margin-bottom:1px;">
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        </p>
      <% end %>
    </div>
    <%= f.label :password, class:"offset-md-1 col-md-2 col-form-label text-right space-label-right"  %>
    <%= f.password_field :password, autocomplete: "off", class:"col-md-6 form-control" %>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, class:"offset-md-1 col-md-2 col-form-label text-right space-label-right"  %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"col-md-6 form-control" %>
  </div>

  <div class="form-group row">
    <div class="col-md-4 offset-md-4">
      <%= f.submit "Sign up",class:" btn-block btn  btn-success" %>
      <%= render "users/shared/links" %>
    </div>
  </div>
<% end %>