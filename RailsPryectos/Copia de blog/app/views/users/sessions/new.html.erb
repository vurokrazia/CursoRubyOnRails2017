<div class="row">
  <div class="col-md-12">
    <div class="jumbotron ">
      <h2 class="text-center   form-title">Iniciar Sesi√≥n</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group row">
          <%= f.label :email, class:"offset-md-1 col-md-2 col-form-label text-right space-label-right"%>
          <%= f.email_field :email, autofocus: true, class:"col-md-6 form-control" %>
        </div>

        <div class="form-group row">
          <%= f.label :password, class:"offset-md-1 col-md-2 col-form-label text-right space-label-right" %>
          <%= f.password_field :password, autocomplete: "off", class:"col-md-6 form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group row">
              <div class="offset-md-5 col-md-4">
                <%= f.check_box :remember_me, class:"" %>
                <%= f.label :remember_me, class:"" %>
              </div>
          </div>
        <% end -%>

        <div class="form-group row">
            <div class="col-md-4 offset-md-4">
            <%= f.submit "Log in", class:"btn  btn-success btn-block  " %>
            <%= render "users/shared/links" %>
            </div>

        </div>
      <% end %>
      
    </div>
  </div>
</div>