.py-5
  .container-fluid
    %p#ejemplo
    %p.ejemplo
    %p.ejemplo
    .row
      -@products.each do |product|
        .col-md-3.col-lg-2.col-sm-12.my-1
          .card
            - if !product.myimages.first.nil?
              =image_tag product.myimages.first.img, class:"card-img-top", style:"max-height:200px"
            .card-body
              .row 
                .col-xs-12col-md-4.col-lg-12
                  %h5.text-center.card-title= product.p_name
                .col-xs-12col-md-8.col-lg-11.col-lg-offset-1
                  =link_to product, class:"btn btn-primary mx-1" do 
                    %i.fa.fa-fw.fa-eye.fa-lg
                  =render "partials/buttons",product:product
    .flickr_pagination
      = will_paginate @products