.py-5
  .container-fluid
    .row
      -@products.each do |product|
        .col-md-2.col-sm-12.my-3
          .card
            - if !product.myimages.first.nil?
              =image_tag product.myimages.first.img, class:"card-img-top", :style =>"width: 18rem;"
            .card-body
              %h1.text-center.card-title= product.p_name
              %p.text-right
                =link_to product, class:"btn btn-primary mx-1" do 
                  %i.fa.fa-fw.fa-eye.fa-lg
                %button{ :id => "product_fav_#{product.id}", class:"btn btn-success mx-1 ", :onclick => "actions.addFav(this)"} 
                  %i.fa.fa-fw.fa-gratipay.fa-lg
                %button{:id => "product_car_#{product.id}", class:"btn btn-info mx-1", :onclick => "actions.addCar(this)"}
                  %i.fa.fa-fw.fa-shopping-cart.fa-lg
    .flickr_pagination
      = will_paginate @products