.py-5
  .container
    .row
      .col-md-12
        /=render "payments/card_data"
        .card.large-padding
          .card-body
            .table-responsive
              %table.table.table-striped.table-hover.medium#table_shopping_cart
                %thead
                  %td Producto
                  %td Costo
                  %td Acciones
                %tbody
                  -@shopping_cart.my_shopping_carts.each do |i_sh|
                    -product = i_sh.product
                    %tr{id: "p_#{i_sh.id}"}
                      %td= product.p_name
                      %td= product.p_price
                      %td
                        %a.btn.btn-danger{:product => "#{product.id}", :onclick => "actions.deleteItem(this,#{i_sh.id})"}
                          Eliminar
            .top-space.large-padding.text-center#payment_form
              %p{:style => "text-align: right;margin-right:100px;" }
                Total: 
                %strong.medium#mycartTotal  
                  =@shopping_cart.total
            .top-space
              =render "payments/buttons"