.container.py-5
  .row
    .col-md-12 
      .card
        .card-body
          %h1.text-center.my-5= title ||= "Titulo"
          = form_for @category, builder: BootstrapFormBuilder do |f|
            .row
              = f.errors
              = f.label :name
              = f.text_field :name,placeholder: "Minimo 7 caracteres"
              = f.label :description
              = f.text_area :description, placeholder:"Minimo 10 caracteres"
              = f.label :Imagen
              = f.file_field :c_img
              .col-md-2
              = f.submit "Enviar"
              .col-md-4
                = link_to "Atr√°s", home_administrador_path,class:"btn btn-secondary btn-block"