.container
  .row.my-5
    .col-md-12
      - if can? :edit, @product
        .card.my-3
          .card-body
            .row
              .col-md-4.offset-md-2
                = link_to 'Edit', edit_product_path(@product),class:"btn btn-primary btn-block"
              .col-md-4 
                = link_to 'Back', products_path,class:"btn btn-secondary btn-block"
      .card
        .card-body
          .row
            .col-md-12.my-5 
              = image_tag "",class:"fluid-img"
            .col-md-12
              %h1= @product.p_name
              %p= @product.p_description
              %p= "Costo: #{@product.p_price}"
              %p= "En stock: #{@product.p_quantify}"
              %p= "Costo envio: #{@product.p_send}"
              %p= "Disponible: #{@product.p_available}"