.container
  .row
    .col-md-12
      .card.my-5
        .card-body
          %h1.text-center.my-5
            Editar #{resource_name.to_s.humanize}
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put },builder: BootstrapFormBuilder ) do |f|
            .row
              = f.errors
              = f.label :email
              = f.email_field :email, autofocus: true
              = f.label "password (leave blank if you don't want to change it)"
              = f.password_field :password, autocomplete: "off"
              = f.label "password_confirmation #{@minimum_password_length} characters minimum"
              = f.password_field :password_confirmation, autocomplete: "off"
              = f.label "current_password  (we need your current password to confirm your changes)"
              = f.password_field :current_password, autocomplete: "off"

              = f.label :name
              = f.text_field :name
              = f.label :last_name
              = f.text_field :last_name
              = f.label :age
              = f.number_field :age
              = f.label :img
              = f.file_field :img
              = f.label :state
              = f.text_field :state
              = f.label :city
              = f.text_field :city
              = f.label :street
              = f.text_field :street
              .col-md-2
              = f.submit "Update",class:"my-5"
              .col-md-4
                = link_to "Regresar", root_path, class:"btn btn-secondary btn-block my-5"
            